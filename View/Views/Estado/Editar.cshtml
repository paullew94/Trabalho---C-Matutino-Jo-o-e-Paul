
@{
    ViewBag.Title = "Editar";
}

<h2>Editaçao dos Estados cadastrados</h2>

<form action="/estado/update" method="post">
    <input type="hidden" name="id" value="@ViewBag.Estado.Id" />
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome-estado">Nome do Estado</label>
                <input type="text" name="nome" class="form-control" id="campo-nome-estado"  value="@ViewBag.Estado.Nome"/>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-sigla-estado">Sigla do Estado</label>
                <input type="text" name="sigla" class="form-control" id="campo-sigla-estado"  value="@ViewBag.Estado.Sigla"/>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-success float-right"> Salvar </button>
        </div>
    </div>
</form>
