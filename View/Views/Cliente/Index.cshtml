
@{
    ViewBag.Title = "Index";
}

<h2>Lista de Cliente</h2>
<div class="row">
    <div class="col-12">
        <a href="/cliente/cadastro" class="btn btn-primary float-right "> Novo Cliente </a>
    </div>
</div>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Cidade</th>
            <th>Cpf</th>
            <th>Data Nascimento</th>
            <th>Numero</th>
            <th>Complemento</th>
            <th>Logradouro</th>
            <th>Cep</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Cidade</th>
            <th>Cpf</th>
            <th>Data Nascimento</th>
            <th>Numero</th>
            <th>Complemento</th>
            <th>Logradouro</th>
            <th>Cep</th>
            <th>Ação</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (Model.Cliente cliente in ViewBag.Clientes)
        {
        <tr>
            <td>@cliente.Id</td>
            <td>@cliente.Nome</td>
            <td>@cliente.Cidade.Nome</td>
            <td>@cliente.Cpf</td>
            <td>@cliente.DataNascimento</td>
            <td>@cliente.Numero</td>
            <td>@cliente.Complemento</td>
            <td>@cliente.Logradouro</td>
            <td>@cliente.Cep</td>
            <td>
                <a href="/cliente/editar?id=@cliente.Id" class="btn btn-primary"> Editar</a>
                <a href="/cliente/apagar?id=@cliente.Id" class="btn btn-danger"> Apagar</a>
            </td>
        </tr>
        }
    </tbody>
</table>


